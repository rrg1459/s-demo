<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if resource.errors.any? %>
    <%= render 'parciales/error_message', error_message: resource.errors.first[1] %>
  <% end %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Nombre Completo" %>
  </div>
  <div class="form-group">
    <%= f.text_field :email, class: "form-control", placeholder: "Correo" %>
  </div>
  <div class="form-group">
    <%= f.text_field :username, class: "form-control", placeholder: "Usuario" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmar contraseña" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Crear', class: "btn btn-warning" %>
  </div>
<% end %>

