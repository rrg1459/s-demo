<div class="col-lg-3"></div>
<div class="col-lg-6 well">
  <table style="width:100%">
    <tr>
      <th style="text-align: left" ><h1>Grupo</h1></th>
      <th style="text-align: right" ><%= button_to 'Nuevo Grupo', new_grupo_path, :class => "btn btn-primary", method: :get %></th>
    </tr>
  </table>
  <p>
    <% s = 's'; s = '' if @grupo.cantidad_contactos == 1 %>
    <h3><strong><%= "#{@grupo.nombre}," %></strong> <%= "tiene #{@grupo.cantidad_contactos} contacto#{s}" %></h3>
  </p>
  <% num = @contactos.length %>
  <% if num > 0 %>
    <h4><%= "Lista de contactos" %></h4>
    <h5><%= "(Se puede ver detalle del contacto al hacer CLIC en el nÃºmero o en el nombre)" %></h5>
    <table>
      <thead>
        <tr>
          <th style="text-align: center" >Numero</th>
          <th style="text-align: center" >Nombre</th>
          <th style="text-align: center" >Archivo</th>
          <th style="text-align: center" >Todos los grupos de este contacto</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @contactos.each do |contacto| %>
          <tr>
            <td><%= link_to "(0#{contacto.numero[0,3]})#{contacto.numero[3,3]}-#{contacto.numero[6,7]}", contacto %></td>
            <td><%= link_to contacto.nombre, contacto %></td>
            <td><%= contacto.archivo %></td>
            <td><%= contacto.grupos.map(&:nombre).sort.join(", ") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <br>
  <% end %>
  <table>
  <th>
     <td> <%= button_to 'Listado de Grupos', grupos_path, :class => "btn btn-info", method: :get %></td>
     <td> <%= button_to 'Editar', edit_grupo_path, :class => "btn btn-success", method: :get %></td>
  </th>
  </table>
</div>

