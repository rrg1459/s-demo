<% if resource.errors.any? %>
  <div class="alert alert-danger alert-dismissable alert-fixed">
    <%= resource.errors.full_messages.first %>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  </div>
<% end %>
<div class="col-lg-6 col-lg-offset-3">
  <div class="well">
    <h4><b>Editar Perfil</b></h4>
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1">
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label 'Nombre Completo' %>
            <%= f.text_field :name, placeholder: 'name', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :usuario %>
            <%= f.text_field :username, placeholder: 'username', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :correo %>
            <%= f.text_field :email, placeholder: 'correo', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :contraseña %>
            <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
          </div>
          <div class="form-group">
            <%= submit_tag "Actualizar", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
