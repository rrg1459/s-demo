<div class="col-lg-3"></div>
<div class="col-lg-6 well">

  <h2>Detalle de la recarga</h2>
  <% if @usuario %>
    <strong>Nombre:</strong>
    <%= @usuario.name %>
    <br>
    <strong>Usuario:</strong>
    <%= @usuario.username %>
    <br>
    <strong>Correo:</strong>
    <%= @usuario.email %> 
    <br>
    <strong>Saldo del usuario:</strong>
    <%= number_to_currency(@usuario.saldo, {:precision => 0, :unit => "Bs ", :delimiter => "."}) %>
  <% else %>
    <strong>Saldo de la campaña:</strong><br>
    Ver barra de navegación
  <% end %>

  <br>
  <strong>Monto de la recarga:</strong>
  <%= number_to_currency(@recarga.monto_bs, {:precision => 0, :unit => "Bs ", :delimiter => "."}) %>
  <br>
  <strong>Referencia:</strong>
  <%= @recarga.referencia %>
  <br>
  <strong>Fecha creada:</strong>
  <%= @recarga.created_at.try(:strftime, "%m/%d/%Y %I:%M%p")  %>
  <br>
  <strong>Fecha aplicada:</strong>
  <%= @recarga.f_aplicado.try(:strftime, "%m/%d/%Y %I:%M%p")  %>
  <br>
  <strong>Comentarios:</strong>
  <%= @recarga.comentarios %>
  <br>
  <br>
  

<%= link_to 'Ajustar pre-recarga', edit_recarga_path(@recarga) %> |
<%= link_to 'Lista de pre-recargas', recargas_path %>

</div>